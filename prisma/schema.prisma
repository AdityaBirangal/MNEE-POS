// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Invoice model for MNEE POS
// Stores invoice data with payment status and transaction information
// Note: Using String for status (could use enum in PostgreSQL, but keeping simple for compatibility)
model Invoice {
  id              String   @id // 10-character uppercase hex ID (generated by application)
  amount          String   // Amount in MNEE units (6 decimals, e.g., "1000000" = $1.00)
  currency        String   @default("MNEE") // Token currency (default: MNEE)
  status          String   @default("pending") // Invoice status: "pending" or "paid" (enforced by app logic)
  merchantAddress String   // Receiver address (merchant wallet)
  senderAddress   String?  // Sender address (customer/payer) - set when payment is made
  queueID         String?  // Queue ID from x402 payment receipt (UUID, not blockchain tx hash)
  paymentUrl      String   // Payment URL for this invoice
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([merchantAddress])
  @@index([status])
  @@map("invoices")
}

